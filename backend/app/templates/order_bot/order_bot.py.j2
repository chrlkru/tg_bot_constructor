# ──────────────────────── состояния FSM ───────────────────────────────
class CatalogState(StatesGroup):
    page = State()

class CartState(StatesGroup):
    checkout_address = State()
    checkout_confirm = State()

class ProductAdminState(StatesGroup):
    name        = State()
    short_desc  = State()
    full_desc   = State()
